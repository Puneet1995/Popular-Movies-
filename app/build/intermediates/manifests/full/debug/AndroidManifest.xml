<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.techpuneet.popularmovies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="tk.techpuneet.popularmovies.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tk.techpuneet.popularmovies.Details"
            android:parentActivityName="tk.techpuneet.popularmovies.MainActivity" >
        </activity>
        <activity
            android:name="tk.techpuneet.popularmovies.SettingsActivity"
            android:theme="@style/AlertDialog.AppCompat" >
        </activity>
    </application>

</manifest>